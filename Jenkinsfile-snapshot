#!/usr/bin/env groovy

pipeline {
    agent any

    tools {
        maven "maven3"
    }

    stages {
        stage('Init') {
            steps {
                configFileProvider([configFile(fileId: '75d7a907-05a7-49c4-8ca4-ecfc124b4afb', targetLocation: 'settings.xml')]) {
                    sh 'mkdir -p ~/.m2 && cp $WORKSPACE/settings.xml -f ~/.m2/settings.xml'
                }
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Deploy') {
            steps {
                sh "mvn deploy:deploy -Dmaven.test.skip=true -DaltDeploymentRepository=sip3-snapshots-ce::default::${SIP3_MAVEN_REPO_URI}/snapshots-ce"
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}